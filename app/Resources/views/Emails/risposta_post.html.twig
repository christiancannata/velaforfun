{% extends 'layout_email.html.twig' %}

{% block title %}Risposta al Post{% endblock %}

{% block body %}




    <div class='movableContent'>
        <table width="580" border="0" cellspacing="0" cellpadding="0" align="center">
            <tr>
                <td height='40'></td>
            </tr>
            <tr>
                <td width='410'>
                    <table width="580" cellpadding="0" cellspacing="0" align="center">
                        <tr>
                            <td height='15'></td>
                        </tr>
                        <tr>
                            <td>
                                <div class='contentEditableContainer contentTextEditable'>
                                    <div class='contentEditable' style='text-align: left;'>
                                        <h2 style='font-size:16px;'>Il topic <strong>{{ topic.title }}</strong> ha una nuova risposta</h2>




                                        <b>Inserita da: </b> {{ post.createdBy.username }}<br>
                                        <b>Risposta:</b> {{ post.body|raw }} <br>

                                        <br><br>
                                        <a href="http://www.velaforfun.com/forum/velaforfun/topic/{{ topic.id }}">Clicca qui per visualizzare la risposta sul forum di Vela For Fun</a>
                                        <br>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>

{% endblock %}



