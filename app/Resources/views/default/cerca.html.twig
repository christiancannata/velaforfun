{% extends 'base.html.twig' %}

{% block title %}Cerca{% endblock %}

{% block description %}asdas dasd {% endblock %}

{% block body %}


    <!-- contenuto -->


    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="category">
                <a href="#" id="back-link" class="back-link"> <span class="glyphicon glyphicon-menu-left bordered"
                                                                    aria-hidden="true"></span> </a>

                <h1>Cerca su VelaForFun - Risultati per "{{ key }}"</h1>
            </div>
        </div>
    </div>


    <div class="row clearfix" id="content-articolo">
        <div class="col-md-8 column">


            {% for categoria in risultati %}
                <div class="row clearfix">
                    <div class="col-md-12 column">
                        <h2>{{ categoria.type }} <p style="font-size:12px;display:inline">({{ categoria.results|length }} risultati)</p></h2>

                        <div class="divisore-big"></div>

                    </div>
                </div>


                <div class="row clearfix">
                    <div class="col-md-12 column">
                        <div id="body-content" style="min-height: 10px;margin-bottom: 10px">
                            <p>

                                {% for risultato in categoria.results %}
                                    <a href="{{ risultato.link }}">{{ risultato.name }}</a><br>
                                {% endfor %}
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-md-4 column">

        </div>

        <!-- fine contenuto -->

    </div>

{% endblock %}



