{% extends 'base.html.twig' %}

{% block title %}Cerca{% endblock %}

{% block description %}asdas dasd {% endblock %}

{% block body %}


    <!-- contenuto -->


    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="category">
                <a href="#" id="back-link" class="back-link"> <span class="glyphicon glyphicon-menu-left bordered"
                                                                    aria-hidden="true"></span> </a>

                <h1>Cerca su VelaForFun - Risultati per "{{ key }}"</h1>
            </div>
        </div>
    </div>


    <div class="row clearfix" id="content-articolo">
        <div class="col-md-8 column">


            {% for categoria in risultati %}
                <div class="row clearfix">
                    <div class="col-md-12 column">
                        <h2>{{ categoria.type }} <p style="font-size:12px;display:inline">({{ categoria.results|length }} risultati)</p></h2>

                        <div class="divisore-big"></div>

                    </div>
                </div>


                <div class="row clearfix">
                    <div class="col-md-12 column">
                        <div id="body-content" style="min-height: 10px;margin-bottom: 10px">
                            <p>
                            <table class="table">
                                {% for risultato in categoria.results %}
                               <tr><td>{{ risultato.name }}</td><td> <a href="{{ risultato.link }}"><button class="btn btn-primary pull-right hvr-glow" >VAI ALLA PAGINA</button></a></td></tr>

                                {% endfor %}
                            </table>

                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="col-md-4 column">


            {% if articoli|length > 0 %}
                <div class="title" style="border-top:1px solid rgb(153, 153, 153);">
                    Ultimi articoli
                </div>
                <div class="content">


                    {% for articoloRel in articoli|slice(0,3) %}
                        <a href="/archivio/{{ articoloRel.categoria.permalink }}/{{ articoloRel.permalink }}">
                            <div class="latest-news hvr-underline-from-left">
                                <div class="content">
                                    <h4>{{ articoloRel.titolo }}</h4>

                                    <p>  {{ articoloRel.sottotitolo|slice(0, 70)|raw|striptags }}...</p>
                                </div>
                                <div class="arrow">
                                    <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
                                </div>
                            </div>
                        </a>
                    {% endfor %}

                </div>
            {% endif %}



            <div class="colonna-destra" style="margin-bottom: 20px">
                <h2 class="foreground-verde">Hai una ricetta da segnalare?</h2>
                <p>Inviacela subito gratuitamente</p>
                <button type="submit" class="btn btn-default login hvr-glow background-verde" onclick="location.href='nuova-ricetta'">Inserisci ora la tua ricetta</button>


            </div>




        </div>

        <!-- fine contenuto -->

    </div>

{% endblock %}



