{% extends 'base.html.twig' %}

{% block title %}Contattaci{% endblock %}

{% block description %}asdas dasd {% endblock %}

{% block body %}


    <!-- contenuto -->


<div class="row clearfix">
    <div class="col-md-12 column">
        <div class="category">
            <a href="#" id="back-link" class="back-link"> <span class="glyphicon glyphicon-menu-left bordered" aria-hidden="true"></span>  </a>  <h1>Contattaci</h1>
        </div>
    </div>
    </div>

    <div class="row clearfix" id="content-articolo" style="">
        <div class="col-md-8 column">


            <div class="row clearfix">
                <div class="col-md-12 column">
                    <h2>Compila il form per inviarci una comunicazione</h2>
                    <div class="divisore-big"></div>

                </div>
            </div>

            <div class="row clearfix">
                <div class="col-md-12 column" >
                    <div id="body-content" style="min-height: 10px;margin-bottom: 10px">
            <p>

    <form class="fos_user_registration_register" method="POST" enctype="multipart/form-data" name="contatti" action="">
   <div id="fos_user_registration_form">
      <div class="form-group">                <label for="fos_user_registration_form_email" class="control-label required">Email:</label><input type="email" class="form-control" required="required" name="contatto[email]" id="fos_user_registration_form_email"></div>
      <div class="form-group">                <label for="fos_user_registration_form_username" class="control-label required">Oggetto:</label><input type="text" class="form-control" pattern=".{2,}" maxlength="255" required="required" name="contatto[oggetto]" id="fos_user_registration_form_username"></div>
      <div class="form-group">                <label for="fos_user_registration_form_firma" class="control-label">Testo</label><textarea class="form-control" name="contatto[testo]" id="fos_user_registration_form_firma"></textarea></div>
   </div>
   <div>
      <input type="submit" value="Invia Richiesta" class="btn btn-default login hvr-glow">
   </div>
</form>
<input type="hidden" id="successMessage" value="Richiesta inviata con successo!">


</p>
</div></div></div>


        </div>



               <div class="col-md-4 column" style="margin-bottom: 20px">
     {% if articoli|length > 0 %}
    <div class="title" style="border-top:1px solid rgb(153, 153, 153);">
        Ultimi articoli

    </div>
    <div class="content" >


        {% for articoloRel in articoli|slice(0,3) %}
            <a href="/archivio/{{ articoloRel.categoria.permalink }}/{{ articoloRel.permalink }}">
                <div class="latest-news hvr-underline-from-left">
                    <div class="content">
                        <h4>{{ articoloRel.titolo }}</h4>

                        <p>  {{ articoloRel.sottotitolo|slice(0, 70)|raw|striptags }}...</p>
                    </div>
                    <div class="arrow">
                        <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
                    </div>
                </div>
            </a>
        {% endfor %}

    </div>
{% endif %}





        </div>

</div>
        <!-- fine contenuto -->

    </div>

{% endblock %}



