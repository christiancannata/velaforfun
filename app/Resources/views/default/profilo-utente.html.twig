            <div class="row clearfix">
                <div class="col-md-12 column">
                    <h2>Profilo di {{ user.username }}</h2>

                    <div class="divisore-big"></div>

                </div>
            </div>

            <div class="row clearfix">
                <div class="col-md-12 column">
                    <div id="body-content" style="min-height: 10px;margin-bottom: 10px">

                        <p style="margin-top:20px">

                        <div class="row clearfix">
                            <div class="col-md-6 column">
                                {% if app.user.profilePicturePath == "" and app.user.getFacebookId() !="" %}
                                    <div class="row clearfix">
                                        <div class="col-md-12 column">
                                            <img class="avatar-small" style="width: 100px;margin:0"
                                                 src="http://graph.facebook.com/{{ app.user.getFacebookId() }}/picture?type=large"
                                                 alt="avatar"/>
                                        </div>

                                    </div>
                                {% else %}
                                    <div class="row clearfix">
                                        <div class="col-md-12 column">
                                            {% if app.user.profilePicturePath != "" %}
                                                <img class="avatar-small" style="width: 100px;margin:0"
                                                     src="/uploads/utenti/profilo/{{ app.user.profilePicturePath }}"
                                                     alt="avatar"/>
                                            {% else %}
                                                <img class="avatar-small" style="width: 100px;margin:0"
                                                     src="/uploads/utenti/profilo/default_avatar.png"
                                                     alt="avatar"/>
                                            {% endif %}
                                        </div>

                                    </div>
                                {% endif %}
                            </div>
                            <div class="col-md-6 column">
                                <strong>Nome:</strong> {{ user.nome }}<br>
                                <strong>Cognome:</strong> {{ user.cognome }}<br>
                                <strong>Username:</strong> {{ user.username }}<br>
                            </div>
                        </div>

                        </p>
                    </div>
                </div>
            </div>


            <div class="row clearfix">
