    <script src="//tinymce.cachefly.net/4.1/tinymce.min.js"></script>
    <script></script>

    <script language="javascript">
        $(document).ready(function () {

            if($("#blogbundle_articolo_testo").length>0){
                tinymce.init({
                    language_url: '/bundles/app/js/languages/it.js',
                    selector: '#blogbundle_articolo_testo',
                    plugins: ["textcolor","image"],
                    file_picker_callback: function(callback, value, meta) {
                        // Provide file and text for the link dialog
                        if (meta.filetype == 'file') {
                            callback('mypage.html', {text: 'My text'});
                        }

                        // Provide image and alt text for the image dialog
                        if (meta.filetype == 'image') {
                            callback('myimage.jpg', {alt: 'My alt text'});
                        }

                        // Provide alternative source and posted for the media dialog
                        if (meta.filetype == 'media') {
                            callback('movie.mp4', {source2: 'alt.ogg', poster: 'image.jpg'});
                        }
                    },
                    toolbar: "undo redo | styleselect | bold italic | link image | forecolor backcolor"
                });
            }

            var forms = [
                '[ name="{{ form.vars.full_name }}"]'
            ];


            $(forms.join(',')).submit(function (e) {
                e.preventDefault();
                var form = $(this)
                form.find('input[type="submit"],button').attr('disabled', 'disabled');
                postForm($(this), function (response) {
                    if (response.success == true) {
                        showalert(form, "Creato con successo!", "success")
                    } else {
                        showalert(form, "Errore nella creazione", "error")
                    }
                    form.find('input[type="submit"],button').removeAttr('disabled');
                });

                return false;
            });


        });
    </script>

