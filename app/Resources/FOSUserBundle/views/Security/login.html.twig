{% extends 'base.html.twig' %}
    {% block body %}


        <!-- contenuto -->

        <div class="container">

            <div class="row clearfix">
                <div class="col-md-12 column">

                    <ol class="breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Library</a></li>
                        <li class="active">Data</li>
                    </ol>

                </div>
            </div>
            <!-- fine contenuto -->
            <div class="row clearfix">
                <div class="col-md-6 column">
                    <div class="jumbotron">
                        <div class="container">
                            <h1 class="text-center">Accedi</h1>

{% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

                             <form method="post" action="/login_check">
                                    <div class="form-group">
                                        <label for="username">Username:</label>
                                        <input type="text" required="required" value="" name="_username" id="username">
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password:</label>
                                        <input type="password" required="required" name="_password" id="password">
                                    </div>
                                    <div class="form-group">

                                        <input type="checkbox" value="on" name="_remember_me" id="remember_me">
                                        <label for="remember_me">Ricordami</label>
                                    </div>
                                    <button type="submit" class="btn btn-default">Accedi</button>
                                    </form>

                            <div class="divisore"></div>
                            <p class="text-center">oppure</p>
                             <a href="/secure_area/connect/service/facebook" class="btn btn-block btn-social btn-lg btn-facebook hvr-glow ">
                                <i class="fa fa-facebook"></i>
                                Accedi con Facebook
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 column">
                    <div class="jumbotron">
                        <h1>Nuovo sul sito? Registrati!</h1>
                        <p>...</p>
                        <p><a class="btn btn-primary btn-lg" href="#" role="button">Registrati ora</a></p>
                    </div>
                </div>
            </div>
        </div>

</div>


    {% endblock %}


