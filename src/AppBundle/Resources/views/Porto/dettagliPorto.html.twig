                if(marker!=""){
                    map.removeLayer(marker);
                }

                marker = L.marker([e.latlng.lat, e.latlng.lng]);
                marker.setIcon(L.mapbox.marker.icon({
                    'marker-color': '#ff8888',
                    'marker-symbol': 'star',
                    'marker-size': 'medium'
                }));


                map.setView([ e.latlng.lat,  e.latlng.lng ], 8);


                marker.addTo(map);






            });

// If the user chooses not to allow their location
