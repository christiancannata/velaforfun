 {% endblock %}



{% block javascripts %}
    <script src='https://api.tiles.mapbox.com/mapbox.js/v2.1.9/mapbox.js'></script>
    <script language="javascript"><!--
        var meteoIcon = [];
        meteoIcon["01d"] = "wi-day-sunny";

        meteoIcon["02d"] = "wi-day-cloudy";
        meteoIcon["03d"] = "wi-cloud";
        meteoIcon["04d"] = "wi-cloudy";
        meteoIcon["09d"] = "wi-showers";
        meteoIcon["10d"] = "wi-day-showers";
        meteoIcon["11d"] = "wi-thunderstorm";
        meteoIcon["13d"] = "wi-snow";
        meteoIcon["50d"] = "wi-fog";
        meteoIcon["01n"] = "wi-night-sunny";
        meteoIcon["02n"] = "wi-night-cloudy";
        meteoIcon["03n"] = "wi-cloud";
        meteoIcon["04n"] = "wi-cloudy";
        meteoIcon["09n"] = "wi-showers";
        meteoIcon["10n"] = "wi-night-showers";
        meteoIcon["11n"] = "wi-thunderstorm";
        meteoIcon["13n"] = "wi-snow";
        meteoIcon["50n"] = "wi-fog";


        $(document).ready(function () {


            // Provide your access token
            L.mapbox.accessToken = 'pk.eyJ1IjoiY2hyaXN0aWFuMTQ4OCIsImEiOiJZaldjZlM0In0.hXiRMyyCDLdQZUrqXF2eNw';
            // Create a map in the div #map
            var map = L.mapbox.map('map', 'christian1488.m5b7ic2b');
            var myLayer = null;
            // Build a marker from a simple GeoJSON object:
            var arrayPorti = new Array();


            var arrayPorto = {
                "type": "Feature",
                "geometry": {
                    "type": "Point",
                    "coordinates": [
                        {{ porto.getLongitudine() }},
                        {{ porto.getLatitudine() }}
                    ]
                },
                "properties": {
                    "title": "{{ porto.getNome() }}",
                    "marker-color": "#429CBC",
                    "marker-size": "medium",
                    "marker-symbol": "harbor"
                },
                "id": {{ porto.getId() }}
            };

            arrayPorti.push(arrayPorto);


            myLayer = L.mapbox.featureLayer(arrayPorti).addTo(map);

            myLayer.on('click', function (e) {
                var marker = e.layer;
                feature = marker.feature;
                var id = feature.id;
                $(".porto-meteo").css("opacity", 0.4);
                $.ajax({
                    url: "/porti/" + id + "/jsondata",
                    dataType: "json",
                    success: function (response) {
                        $("#loading-porto").show();
                        $(".porto-title").css("opacity", "0.5");
                        $(".porto-content").css("opacity", "0.5");

                        //SET CONTENUTO DEL PORTO
                        $("#porto-nome").html(response.porto.nome);
                        $("#porto-temperatura").html(parseInt(response.meteo.main.temp) + "°");
                        $("#porto-umidita").html(parseInt(response.meteo.main.humidity) + "%");
                        $("#porto-vento").html(parseInt(response.meteo.wind.speed) + "km/h");
                        $("#loading-porto").hide();
                        $("#meteo-icon").attr("class", "wi "+meteoIcon[response.meteo.weather[0].icon]);
                        $(".porto-title").css("opacity", "1");
                        $(".porto-content").css("opacity", "1");
                        $(".porto-meteo").css("opacity", 1);


                    }
                });

            });


            myLayer.on('ready', function (e) {
                map.fitBounds(myLayer.getBounds());

                myLayer.eachLayer(function (layer) {
                    var item = markerList.appendChild(document.createElement('li'));
                    item.innerHTML = layer.toGeoJSON().properties.title;
                    item.onclick = function () {
                        L.mapbox.setView(layer.getLatLng(), 14);
                        layer.openPopup();
                    };
                });
            });

// This uses the HTML5 geolocation API, which is available on
// most mobile browsers and modern browsers, but not in Internet Explorer
//
// See this chart of compatibility for details:
// http://caniuse.com/#feat=geolocation
            if (!navigator.geolocation) {
                geolocate.innerHTML = 'Geolocation is not available';
            } else {
                geolocate.onclick = function (e) {
                    e.preventDefault();
                    e.stopPropagation();
                    map.locate();
                };
            }

// Once we've got a position, zoom and center the map
// on it, and add a single marker.
            map.on('locationfound', function (e) {
                map.fitBounds(e.bounds);

                myLayer.setGeoJSON({
                    type: 'Feature',
                    geometry: {
                        type: 'Point',
                        coordinates: [e.latlng.lng, e.latlng.lat]
                    },
                    properties: {
                        'title': 'Here I am!',
                        'marker-color': '#ff8888',
                        'marker-symbol': 'star'
                    }
                });

                // And hide the geolocation button
                geolocate.parentNode.removeChild(geolocate);
            });

// If the user chooses not to allow their location
// to be shared, display an error message.
            map.on('locationerror', function () {
                geolocate.innerHTML = 'Position could not be found';
            });


            $("#attracca").click(function () {
                var button = $(this);
                $("button").attr("disabled", "disabled");


                {% if app.user is not defined %}

                $("#login-dialog").modal();

                {% else %}

                $.ajax({
                    type: "POST",
                    url: $(this).attr('data-route'),
                    success: function (response) {
                        if (response.response == true) {

                            $("#attracco-dialog").modal();

                        } else {


                        }
                        $("button").removeAttr("disabled");

                    }
                });


                {% endif %}


            });

            $("button").removeAttr("disabled");
        });
        //--></script>
{% endblock %}

{% block body %}
    <div class="row clearfix">
        <div class="col-md-12 column">
            <h1>Porto di {{ porto.nome }}</h1>
        </div>
    </div>
    <!-- contenuto -->

    <div class="row clearfix">
        <div class="col-md-8 column">

            <div class="row clearfix">
                <div class="col-md-12 column">
                    <div class="container-mappa">

                        <div class="row clearfix">
                            <div class="col-md-6 col-xs-6 column text-left">
                                <button class="localizzami hvr-glow left" id='geolocate'><i style=""
                                                                                            class="fa fa-crosshairs"></i>Localizzami
                                </button>
                            </div>
                            <div class="col-md-6 col-xs-6 column text-right">
                                <button class="checkin  hvr-glow right" id='attracca'
                                        data-route="/porti/{{ porto.id }}/attracca"><i class="fa fa-anchor"></i>
                                    Attracca
                                    qui
                                </button>
                            </div>

                        </div>
                        <div class="row clearfix">
                            <div class="col-md-12 column">
                                <div id='map' style="margin-top:0px"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row clearfix">
                <div class="col-md-12 column">
                    <div class="field-nuovo-commento">
                        <div class="row clearfix">
                            <div class="col-md-12 column">
                                <p><strong>Scrivi un commento su questo porto</strong></p>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-md-12 column">
                                {% if app.user %}
                                    <form action="/commento-porto/crea" method="post" name="appbundle_commentoporto">
                                        <div class="col-md-11 column" style="padding:0">
                                            <input type="hidden" id="appbundle_commentoporto_utente"
                                                   name="appbundle_commentoporto[utente]" value="{{ app.user.id }}"/>
                                            <input type="hidden" id="appbundle_commentoporto_porto"
                                                   name="appbundle_commentoporto[porto]" value="{{ porto.id }}"/>
                                            <input type="text" name="appbundle_commentoporto[testo]"
                                                   class="form-control"
                                                   required="required" placeholder="Scrivi un commento...">

                                            <p style="margin-top:5px;margin-bottom: 0px">Esprimi un giudizio su questo
                                                porto:</p>
                                            <input type="radio" value="POSITIVO"
                                                   name="appbundle_commentoporto[tipoCommento]" id="radio1" checked/>
                                            <label for="radio1" style="display: inline;width:auto">
            <span class="fa-stack">
                <i class="fa fa-thumbs-up fa-stack-1x foreground-verde"></i>

            </span>
                                            </label>

                                            <input type="radio" value="NEUTRO"
                                                   name="appbundle_commentoporto[tipoCommento]" id="radio3" checked/>
                                            <label for="radio3" style="display: inline;width:auto">
            <span class="fa-stack">
                <i class="fa fa-pause fa-rotate-90 fa-stack-1x foreground-grigio"></i>

            </span>
                                            </label>


                                            <input type="radio" value="NEGATIVO"
                                                   name="appbundle_commentoporto[tipoCommento]" id="radio2"/>
                                            <label for="radio2" style="display: inline;width:auto">
            <span class="fa-stack">
                <i class="fa fa-thumbs-down fa-stack-1x foreground-rosso"></i>
            </span>
                                            </label>
                                        </div>
                                        <div class="col-md-1 column" style="padding:0">
                                            <a href="#"
                                               onclick="event.preventDefault();$('form[name=appbundle_commentoporto]').submit()">
                                                <i class="fa fa-sign-in"></i>
                                            </a>
                                        </div>
                                        <input type="hidden" class="callback" value="setNuovoCommentoPorto">
                                    </form>

                                {% else %}
                                    <div class="col-md-12 column">
                                        <div class="row clearfix">
                                            <div class="col-md-12 column">
                                                <p>Devi effettuare l'accesso per scrivere un nuovo commento:</p>

                                            </div>
                                        </div>
                                        <div class="row clearfix">
                                            <div class="col-md-8 column">


                                                <form action="/login_check" method="post">
                                                    <div class="input-group">
                                                        <span><i class="glyphicon glyphicon-user"></i></span>
                                                        <input id="username" name="_username" type="text" value=""
                                                               placeholder="Nome utente">
                                                        <span><i class="glyphicon glyphicon-lock"></i></span>
                                                        <input type="password" id="password" name="_password" value=""
                                                               placeholder="Password">
                                                        <button class="btn btn-default login hvr-glow small"
                                                                type="submit">
                                                            Accedi
                                                        </button>

                                                    </div>
                                                </form>
                                            </div>

                                            <div class="col-md-4 column">


                                                <a class="btn btn-block btn-social btn-sm btn-facebook loginFacebook"
                                                   href="http://local.velaforfun.dev/secure_area/connect/facebook">
                                                    <i class="fa fa-facebook"></i>
                                                    Accedi con Facebook
                                                </a>
                                            </div>
                                        </div>


                                    </div>

                                {% endif %}

                            </div>
                        </div>

                        <div class="row clearfix">
                            <div class="col-md-12 column">
                                <div class="response-form">

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div class="col-md-4 column" id="colonnaPorto">


            <div class="row clearfix">

                <div class="col-md-12 column">

                    <div class="over-box">
                        <form name="cerca_porti" id="formCercaPorto" action="/porti/{permalink}" method="GET">
                            <div class="form-group">
                                <div class="inner-addon left-addon">
                                    <a onclick="$('#formCercaPorto').submit();" href="#"><i
                                                class="fa fa-search"></i></a>
                                    <input type="search" placeholder="cerca un porto..." class="form-control"
                                           id="selectPorto" autocomplete="off">
                                </div>

                            </div>


                        </form>
                    </div>


                </div>
            </div>


            <div class="row clearfix">

                <div class="col-md-12 column porto-meteo">

                    <div class="row clearfix">

                        <div class="col-md-12 column">
                            <h1 id="porto-nome">{{ porto.nome }}</h1>
                        </div>
                    </div>

                    <div class="row clearfix">

                        <div class="col-md-4 column">
                            <i class="wi {{ meteo(meteo.weather[0].icon) }}" id="meteo-icon"> </i>
                        </div>

                        <div class="col-md-8 column">
                            <div class="row clearfix">
                                <div class="col-md-6 column">
                                    <h4 id="porto-temperatura">{{ meteo.main.temp|number_format }}°</h4>

                                    <p>MAX</p>

                                    <p>MIN</p>
                                </div>
                                <div class="col-md-6column">
                                    <p style="margin:0">VENTI</p>
                                    <div id="porto-vento" style="margin-bottom: 10px;">{{ meteo.wind.speed }}km/h</div>
                                    <p style="margin:0">UMIDITA</p>
                                    <div id="porto-umidita" style="margin-bottom: 10px;">{{ meteo.main.humidity  }}%</div>
                                </div>
                            </div>


                            <div class="row clearfix">
                                <div class="col-md-12 column">
                                </div>

                            </div>


                        </div>

                    </div>
                </div>

            </div>


            <div class="row clearfix">
                <div class="row clearfix">
                    <div class="col-md-12 column box attracco">
                        <div class="colonna-destra" style="margin-bottom: 20px;margin-top: 20px">
                            {% if porto.getAnnunciScambioPosto() is empty %}
                                <h2>Vuoi cercare chi scambierebbe il tuo posto barca?</h2>
                                <p>Cerca tra gli annunci di chi vuole scambiare il suo posto barca e scegli in base alle
                                    tue preferenze</p>
                                <button type="submit" class="btn btn-default login hvr-glow"
                                        onclick="location.href='cerca-annuncio'">CERCA TRA GLI ANNUNCI
                                </button>
                            {% else %}
                                <h2>{{ porto.getAnnunciScambioPosto()|length }} persone scambiano qui il suo posto
                                    barca</h2>
                                <button type="submit" class="btn btn-default login hvr-glow"
                                        onclick="location.href='cerca-annuncio'">VISUALIZZA GLI ANNUNCI
                                </button>

                            {% endif %}

                        </div>


                    </div>
                </div>
                <div class="row clearfix">

                    <div class="col-md-12 column box attracco">
                        <h3>Chi ha attraccato qui</h3>

                        <div style="margin-bottom: 20px;">

                            <button class="btn btn-default login hvr-glow" type="submit"><i class="fa fa-anchor"></i>
                                ATTRACCA NEL PORTO
                            </button>
                            {% if porto.getAttracchi() is empty %}
                                Non ci sono utenti attraccati in questo porto


                            {% else %}

                                <div class="scroll-pane" style="margin-top:15px">
                                    <ul class="media-list" id="attracchiPorto">

                                        {% for attracco in porto.getAttracchi() %}

                                            <li class="media">
                                                <div class="media-left">
                                                    <a href="#">

                                                        {% if attracco.utente.profilePicturePath == "" and attracco.utente.getFacebookId() !="" %}
                                                            <img width="50" class="media-object"
                                                                 src="http://graph.facebook.com/{{ attracco.utente.getFacebookId() }}/picture?type=square"
                                                                 alt="avatar"/>

                                                        {% else %}

                                                            {% if attracco.utente.profilePicturePath != "" %}
                                                                <img width="50" class="media-object"
                                                                     src="/uploads/utenti/profilo/{{ attracco.utente.profilePicturePath }}"
                                                                     alt="avatar"/>
                                                            {% else %}
                                                                <img width="50" class="media-object"
                                                                     src="/uploads/utenti/profilo/default_avatar.png"
                                                                     alt="avatar"/>
                                                            {% endif %}
                                                        {% endif %}


                                                    </a>
                                                </div>
                                                <div class="media-body">
                                                    <h4 class="media-heading">{{ attracco.utente.username }}</h4>

                                                    <p>Il giorno {{ attracco.timestamp|date("d/m/Y") }}</p>


                                                </div>
                                            </li>
                                        {% endfor %}

                                    </ul>
                                </div>

                            {% endif %}

                        </div>

                    </div>


                </div>
            </div>


            <div class="row clearfix">

                <div class="row clearfix">
                    <div class="col-md-12 column box commento">
                        <h3>Commenti sul porto</h3>


                        {% if porto.getCommenti is empty %}
                            <div class="no-commento">Non ci sono commenti per questo porto</div>
                        {% else %}
                            <div class="scroll-pane">
                                <ul class="media-list" id="commentiPorto">

                                    {% for commento in porto.getCommenti() %}

                                        <li class="media">
                                            <div class="media-left">
                                                <a href="#">
                                                    {% if commento.utente.profilePicturePath == "" and commento.utente.getFacebookId() !="" %}
                                                        <img width="50" class="media-object"
                                                             src="http://graph.facebook.com/{{ commento.utente.getFacebookId() }}/picture?type=square"
                                                             alt="avatar"/>
                                                    {% else %}

                                                        {% if commento.utente.profilePicturePath != "" %}
                                                            <img width="50" class="media-object"
                                                                 src="/uploads/utenti/profilo/{{ commento.utente.profilePicturePath }}"
                                                                 alt="avatar"/>
                                                        {% else %}
                                                            <img width="50" class="media-object"
                                                                 src="/uploads/utenti/profilo/default_avatar.png"
                                                                 alt="avatar"/>
                                                        {% endif %}




                                                    {% endif %}

                                                </a>
                                            </div>
                                            <div class="media-body">
                                                <h4 class="media-heading">{{ commento.utente.username }}</h4>

                                                <p> {{ commento.testo }}</p>

                                                <p style="font-size: 12px">Inserito
                                                    il {{ commento.timestamp|date("d/m/Y H:i") }}</p>

                                                <p>  {% if commento.tipoCommento == "POSITIVO" %}
                                                        <i class="fa fa-thumbs-up foreground-verde"></i>
                                                    {% endif %}

                                                    {% if commento.tipoCommento == "NEGATIVO" %}
                                                        <i class="fa fa-thumbs-down foreground-rosso"></i>
                                                    {% endif %}

                                                    {% if commento.tipoCommento == "NEUTRO" %}
                                                        <i class="fa fa-pause fa-rotate-90 foreground-grigio"></i>
                                                    {% endif %}
                                                </p>
                                            </div>
                                        </li>


                                    {% endfor %}

                                </ul>
                            </div>

                        {% endif %}


                    </div>
                </div>


            </div>
            <!-- fine contenuto -->
        </div>


        <div class="row clearfix">
            <div class="col-md-12 column">
                <div class="divisore-big"></div>
            </div>
        </div>


    </div>




    <div class="modal fade" id="attracco-dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Attracco nel porto di {{ porto.nome }}</h4>
                </div>
                <div class="modal-body">
                    <p>Il tuo attracco nel porto di {{ porto.nome }} è stato registrato con successo!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Chiudi</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div><!-- /.modal -->



    <div class="modal fade" id="login-dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Modal title</h4>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div><!-- /.modal -->
{% endblock %}



