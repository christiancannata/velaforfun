                                                                 src="/uploads/utenti/profilo/{{ commento.utente.profilePicturePath }}"
                                                                 alt="avatar"/>
                                                        {% else %}
                                                            <img width="50" class="media-object avatar-small"
                                                                 src="/uploads/utenti/profilo/default_avatar.png"
                                                                 alt="avatar"/>
                                                        {% endif %}




