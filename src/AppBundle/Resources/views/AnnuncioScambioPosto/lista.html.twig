{% extends 'base.html.twig' %}

{% block body %}


    <!-- contenuto -->

    <div class="row clearfix">
        <div class="col-md-8 column">

            <h1>{{ titolo }}</h1>

            <table class="table table-striped">
      <thead>
        <tr>
          <th>Tipo</th>
          <th>Titolo</th>
          <th>Data inserimento</th>
          <th>Risposte</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      {% for annuncio in annunci %}
    <tr>
        <th scope="row">{{ annuncio.tipoAnnuncio }}</th>
        <td>{{ annuncio.titolo }}</td>
        <td>{{ annuncio.timestamp|date("m/d/Y") }}</td>
        <td>{{ annuncio.getRisposte()|length }}</td>
        <td><button type="button" class="btn btn-primary"><i class="fa fa-reply"></i>
                 Rispondi</button></td>
    </tr>
      {% endfor %}


      </tbody>
    </table>


        </div>
        <div class="col-md-4 column">



        </div>
    </div>
    <!-- fine contenuto -->

</div>

{% endblock %}



