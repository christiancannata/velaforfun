{% extends 'base.html.twig' %}

{% block body %}


    <!-- contenuto -->

    <div class="row clearfix">
        <div class="col-md-8 column">

            <h1>{{ titolo }}</h1>

            <table class="table table-striped">
      <thead>
        <tr>
          <th>Titolo</th>
          <th>Data inserimento</th>
          <th>Risposte</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      {% for annuncio in annunci %}
    <tr>
        <td>{{ annuncio.topic.title }}</td>
        <td>{{ annuncio.timestamp|date("d/m/Y H:i") }}</td>
        <td>{{ annuncio.topic.getCachedReplyCount() }}</td>
        <td>
            <button type="button" class="btn btn-primary"
                    onclick="location.href='/forum/velaforfun/topic/{{ annuncio.topic.id }}'"><i
                        class="fa fa-reply"></i>
                Leggi Annuncio
            </button>
        </td>
    </tr>
{% endfor %}


      </tbody>
    </table>


        </div>
        <div class="col-md-4 column">
            <div class="content">
            <div class="colonna-destra" style="margin-bottom: 20px">
                           <h2>Hai una barca e sei carente di equipaggio?</h2>
                             <p>Se possiedi una barca o sei in contatto per poter offrire un imbarco pagato o a pagamento</p>
                        <button type="submit" class="btn btn-default login hvr-glow" onclick="location.href='nuovo-annuncio'">CREA ORA IL TUO ANNUNCIO</button>

        </div>

<div class="colonna-destra" style="margin-bottom: 20px">
                           <h2>Sei alla ricerca di un imbarco?</h2>
                             <p>Se sei alla ricerca di un posto in un equipaggio pagato, gratis o a pagamento</p>
           <button type="submit" class="btn btn-default login hvr-glow" onclick="location.href='cerca-annuncio'">CERCA TRA I POSTI DISPONIBILI</button>


        </div>
            </div>





        </div>
    </div>
    <!-- fine contenuto -->

</div>

{% endblock %}



