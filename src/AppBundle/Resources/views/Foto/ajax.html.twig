{% if gallerie| length > 0 %}
<div class="row nodi">
    {% for gallery in gallerie %}
        {% if gallery.foto|length > 0%}
            {% set copertina = '/uploads/galleria_foto/'~gallery.foto[0].immagine|replace({' ': "%20"}) %}
            {% for foto in gallery.foto %}
                {% if foto.inEvidenza == 1 %}
                    {% set copertina = '/uploads/galleria_foto/'~foto.immagine|replace({' ': "%20"}) %}
                {% endif %}
            {% endfor %}


            <div class="col-md-4 column video-box">


                <a href="/foto/{{ gallery.permalink }}">
                    <div class="box-home" style="height: 330px;">
                        <div style="opacity: 1;background-image: url({{ copertina | imagine_filter('my_thumb') }});"
                             class="divBackgroundImage">
                        </div>
                        <div class="content">

                            <div class="box-action">
                                <h2>{{ gallery.nome }}
                                </h2>

                                <div class="over-box">
                                    <p>
                                        Video nella galleria: {{ gallery.foto|length }}
                                    </p>
                                    <button class="btn btn-default dettagli-nodo hvr-sweep-to-right" type="submit"
                                            onclick="location.href='/foto/{{ gallery.permalink }}'">VEDI GALLERIA
                                    </button>
                                </div>

                            </div>


                        </div>

                    </div>
                </a>

            </div>

        {% endif %}


    {% endfor %}
    <div id="loadmoreajaxloader" style="display:none;">
        <center><i class="fa fa-spinner fa-2x fa-spin "></i></center>
    </div>
</div>
{% endif %}