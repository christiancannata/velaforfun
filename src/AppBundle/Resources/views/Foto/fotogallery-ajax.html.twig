
{% if fotos| length > 0 %}
<div class="row nodi">
                {% for foto in fotos %}
                    {% set copertina='/uploads/galleria_foto/'~(foto.immagine|url_encode) %}
                       <div class="col-md-4 column  video-box ">

                    <a class="image-link" href="/uploads/galleria_foto/{{ foto.immagine|url_encode }}">
                        <div class="box-home link-video" style="height: 330px;" data-foto="http://www.velaforfun.com/uploads/galleria_foto/{{ foto.immagine|url_encode }}">
                            <div style="opacity: 1;background-image: url(/uploads/galleria_foto/{{ foto.immagine|url_encode }});"
                                 class="divBackgroundImage" data-original="http://www.velaforfun.com/uploads/galleria_foto/{{ foto.immagine|url_encode }}">
                            </div>
                            <div class="content">

                                <div class="box-action">
                                    {% set tags = foto.getTag()|json_decode %}

                                    <h2>{{ foto.nome }}

                                        {% for tag in tags %}
                                            <span class="tag">{{ tag }}</span>
                                        {% endfor %}


                                    </h2>

                                    <div class="over-box">

                                        <button class="btn btn-default dettagli-nodo hvr-sweep-to-right " type="submit" id="guarda-{{ foto.id }}">
                                            GUARDA FOTO
                                        </button>
                                    </div>

                                </div>


                            </div>

                        </div>
                    </a>

                </div>


                {% endfor %}
</div>


{% endif %}