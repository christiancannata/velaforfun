
{% if fotos| length > 0 %}
<div class="row nodi">
                {% for foto in fotos %}
                    {% set copertina='/uploads/galleria_foto/'~(foto.immagine|url_encode) %}
                    <div class="col-md-4 column  video-box ">

                        <a class="image-link" href="/uploads/galleria_foto/{{ foto.immagine|url_encode }}">
                        <div class="box-home link-video" style="height: 330px;" data-foto="/uploads/galleria_foto/{{ foto.immagine }}">
                            <div style="opacity: 1;background-image: url({{ copertina  }});"
                                 class="divBackgroundImage">
                            </div>
                            <div class="content">

                                <div class="box-action">
                                    <h2>{{ foto.nome }}
                                        {% if foto.autore!="" %}
                                            <p style="font-size: 14px;">di {{ foto.autore }}</p>
                                        {% else %}
                                            <p style="font-size: 14px;">di VelaForFun</p>
                                        {% endif %}
                                    </h2>

                                    <div class="over-box">

                                        <button class="btn btn-default dettagli-nodo hvr-sweep-to-right " type="submit">GUARDA FOTO</button>
                                    </div>

                                </div>


                            </div>

                        </div>
</a>

                    </div>

                {% endfor %}
</div>
    <button class="btn btn-primary load-more">Carica altro</button>

{% endif %}